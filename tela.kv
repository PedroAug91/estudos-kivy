ScreenManager:
    SplashScreen:
    InitialScreen:
    LoginScreen:
    AboutScreen:

<SplashScreen>:
    name: 'splash'    
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "images/logo.png"
        Button:
            background_normal: 'seta.png'
            border: 0,0,0,0
            size_hint: 0.12, 0.05
            pos_hint: {"center_x": .8, "center_y": 0.08}   
            on_press: app.root.current = 'initial'
            
<InitialScreen>:
    name: "inital"
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "images/logo.png"
            size_hint: .72, .72
            pos_hint: {"center_x": .5, "center_y":.75}
        Button:
            background_normal: "images/fundotext.png"
            text: "Sobre o App"
            size_hint: .5, .2
            on_press: app.root.current = 'about'

<LoginScreen>:
    name: 'login'
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1

<AboutScreen>
    name: "about"
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "images/logo.png"
            size_hint: .72, .72
            pos_hint: {"center_x":.5, "center_y":.75}
        Label: 
            text: "SOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\n"
        Button:
            background_normal: "images/fundotext.png"
            text: "Volta"
            size_hint: .3, .3
            on_press: app.root.current = 'initial'