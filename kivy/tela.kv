ScreenManager:
    SplashScreen:
    InitialScreen:
    LoginScreen:

<SplashScreen>:
    name: 'splash'    
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "logo.png"
        Button:
            background_normal: 'seta.png'
            border: 0,0,0,0
            size_hint: 0.12, 0.05
            pos_hint: {"center_x": .8, "center_y": 0.08}   
            on_press: app.root.current = 'inicio'
            
<InitialScreen>:
    name: "inicio"
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        MDIconButton:
            icon: "chevron-right"
            user_font_size: "35sp"
            color: 156/255, 93/255, 65/255, 1
            pos_hint: {"center_x": .5, "center_y": .12}      
            on_press: app.root.current = 'login'   


<LoginScreen>:
    name: 'login'
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1

                    


        
        