ScreenManager:
    SplashScreen:
    InitialScreen:
    LoginScreen:
    AboutScreen:

<SplashScreen>:
    name: 'splash'    
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "images/logo.png"
        Button:
            background_normal: 'images/seta.png'
            border: 0,0,0,0
            size_hint: 0.12, 0.05
            pos_hint: {"center_x": .8, "center_y": 0.08}   
            on_press: app.root.current = 'initial'
            
<InitialScreen>:
    name: "initial"
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "images/logo.png"
            size_hint: .72, .72
            pos_hint: {"center_x": .5, "center_y":.75}
        Button:
            background_normal: "images/fundotext.png"
            text: "Sobre o App"
            size_hint: .5, .2
            on_press: app.root.current = 'about'
        Button:
            background_normal: "images/fundotext.png"
            text: "COMEÃ‡AR AGORA"
            size_hint: .5, .2
            pos_hint: {"center_x": .8, "center_y":.2}
            on_press: app.root.current = 'login'


<LoginScreen>:
    name: 'login'
    orientation: 'vertical'
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: 'images/logo.png'
            size_hint: 0.4, 0.4
            pos_hint: {"center_x": .5, "center_y": .85}
        Label:
            text: 'Nome:'
            color: 'black'
            font_size:"10sp"
            font_name: ".fonts/Poppins-Medium.ttf"
            pos_hint: {"center_x": 0.1, "center_y": .63}
        TextInput:
            id: 'text'
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .6}
            size_hint_y: None
            height:20
            width: 20
<AboutScreen>
    name: 'about'
    MDFloatLayout:
        md_bg_color: 218/255, 187/255, 159/255, 1
        Image:
            source: "images/logo.png"
            size_hint: .72, .72
            pos_hint: {"center_x":.5, "center_y":.75}
        Label: 
            text: "SOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\n"
        Button:
            background_normal: "images/fundotext.png"
            text: "Volta"
            size_hint: .3, .3
            on_press: app.root.current = 'initial'


        
        